void __fastcall TForm1::DemoClick(TObject *Sender)
{
	if (Demo->Caption = "Demo") {

	Demo->Caption = "Stop";
		}
	else if ("Stop" = Demo->Caption) {
	Demo->Caption = "Demo"
		 };
}
